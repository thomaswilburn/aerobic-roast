* { box-sizing: border-box }

main.book {
  position: fixed;
  top: 5px;
  right: 5px;
  width: 100%;
  height: calc(100% - 10px);
  transform-origin: right;
  transform: perspective(1000px) translateZ(-700px) rotateY(-10deg);
  transform-style: preserve-3d;
}

main.book section.page {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transition: transform .4s ease-in-out;
  transform-origin: left 50%;
  backface-visibility: hidden;
  border: 1px solid gray;
  background: linear-gradient(to bottom, white, #F8F8F8);
}

main.book section.page::after {
  content: " ";
  position: absolute;
  transform-origin: 50% 50%;
  transform: rotateY(-180deg);
  background: gray;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
}

section.page.cover {
  transform: perspective(1000px) rotateY(-4deg);
  z-index: 999;
}

section.page.cover.turn {
  transform: perspective(1000px) rotateY(-165deg);
}

section.page.clams {
  transform: perspective(1000px) rotateY(-3deg);
}

section.page.clams {
  transform: perspective(1000px) rotateY(-164deg);
}